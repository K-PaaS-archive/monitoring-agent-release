#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/filebeat/helpers/ctl_setup.sh 'filebeat'

export LANG=en_US.UTF-8
export PIDFILE=$RUN_DIR/filebeat.pid

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    # store this processes pid in $PIDFILE, since the exec below doesn't daemonize
    echo $$ > $PIDFILE

    exec /var/vcap/packages/filebeat/filebeat \
         -e -c ${JOB_DIR}/config/filebeat.yml \
         -path.home /var/vcap/packages/filebeat \
         -path.config ${JOB_DIR}/config \
         -path.data ${STORE_DIR} \
         -path.logs ${LOG_DIR} \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log
    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: filebeat_ctl {start|stop}"

    ;;

esac
exit 0
